<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_white</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:actionMenuTextColor">@color/textColor</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_toolbar_search</item>
        <item name="closeIcon">@drawable/ic_toolbar_clear</item>
        <item name="android:imeActionId">6</item>
    </style>

</resources>
